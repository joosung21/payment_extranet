//- CONTENT
.page-content-wrapper
  //- CONTENT BODY
  .page-content
    //-- PAGE TITLE
    h1.page-title
      | 파트너정보 - PS AGENT
      //- small ZARI GDS를 통해 판매된 예약 내역입니다
    .row
      .col-md-12

        //- LIST TABLE PORTLET
        .portlet.light.bordered
          .portlet-title
            .caption.font-dark
              i.icon-users.font-dark
              span.caption-subject.bold.uppercase #{properties.length}개의 파트너 정보를 불러왔습니다
              .tools
          .portlet-body
            table#table_ps_partner.table.table-striped.table-bordered.table-hover
              thead
                tr
                  th 숙소ID
                  th 숙소이름
                  th 수수료
                  th VENDOR
                  th 도시
                  th 주소
                  th 담당자
                  th 연락처
                  th 이메일
              tbody
                each property in properties
                  tr.odd.gradeX
                    td #{property.id}
                    td #{property.name}
                    td #{property.fee} %
                      each vendor in vendors
                        if property.vendor === vendor.id
                          td #{vendor.name}
                    td #{property.city}
                    td #{property.address}
                    td #{property.contact_person}
                    td #{property.phone}
                    td #{property.email}

