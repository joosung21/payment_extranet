//- CONTENT
.page-content-wrapper
  //- CONTENT BODY
  .page-content
    //-- PAGE TITLE
    h1.page-title
      | 판매내역 - PS AGENT
      //- small ZARI GDS를 통해 판매된 예약 내역입니다
    .row
      .col-md-12
        //- LIST TABLE PORTLET
        .portlet.light.bordered
          .portlet-title
            .caption.font-dark
              i.icon-layers.font-dark
              span.caption-subject.bold.uppercase #{list2.length}건의 판매내역을 불러왔습니다
            .tools
          .portlet-body
            table#table_ps_list.table.table-striped.table-bordered.table-hover
              thead
                tr
                  th ID
                  th 판매채널
                  th 예약발생일
                  th 숙소
                  th 고객이름
                  th 체크인
                  th 판매금액
                  th 수수료
                  th 정산액
                  th 상태
              tfoot
                tr
                  th
                  th
                  th
                  th
                  th
                  th
                  th
                  th
                  th
                  th
              tbody
                each val in list2
                  tr.odd.gradeX
                    td #{val.id}
                    td #{val.channel}
                    td #{moment(val.sold_date).format('YYYY/MM/DD')}
                    each key in property
                      if key.id === val.property_id
                        td #{key.name}
                    td #{val.name}
                    td #{moment(val.checkin).format('YYYY/MM/DD')}
                    - var commition = val.gross_price * 0.15
                    td.currency #{val.gross_price}
                    td.currency #{commition}
                    td.currency #{val.gross_price - commition}

                    td
                      case val.status
                        when '정산완료'
                          span.label.label-sm.label-primary #{val.status}
                        when '정산예정'
                          span.label.label-sm.label-success #{val.status}
                        when '대기중'
                          span.label.label-sm.label-warning #{val.status}
                        when '취소됨'
                          span.label.label-sm.label-default #{val.status}

